mixin form-change-multi(path)
    form(
        action=path
        method="POST" 
        class="form-change-multi"
    )
        .d-flex.align-items-start
            .form-group
                select(name="type" class="form-control")
                    option(disabled selected) -- Action --
                    option(value="active") Active
                    option(value="inactive") Inactive
                    option(value="delete-all") Delete All
                    option(value="change-position") Change Position 
            .form-group
                input(type="hidden" name="ids" value="" class="form-control")
            button(type="submit" class="btn btn-primary") Apply